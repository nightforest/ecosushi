header.header
    .header__top
        .container.header__container
            .logo.header__logo
                a.logo__link(href="#" aria-label="logo")
                    img.logo__img(src="img/logo.svg" width="138" height="23" alt="logo")
                    img.logo__city(src="img/city.svg" width="64" height="11" alt="city")

            nav.header-menu
                ul.header-menu__list
                    li.header-menu__item
                        a.header-menu__link.is-active(href="#") Акції
                    li.header-menu__item
                        a.header-menu__link(href="#") Доставка
                    li.header-menu__item
                        a.header-menu__link(href="#") Про нас
                    li.header-menu__item
                        a.header-menu__link(href="#") Контакти

            nav.actions.header__actions
                ul.actions__list
                    li.actions__item.actions__item--visible-lg
                        button.actions__button(type="button" aria-label="Show location" data-modal="modal-map")
                            svg.actions__icon(width="21" height="25")
                                use(xlink:href="img/sprite.svg#location")

                    li.actions__item
                        button.actions__button(type="button" aria-label="Show contacts" data-modal="modal-contacts")
                            svg.actions__icon(width="24" height="24")
                                use(xlink:href="img/sprite.svg#phone")

                    li.actions__item
                        .lang.header__lang
                            button.lang__toggle(type="button" aria-label="Choose language")
                                svg.lang__flag(width="22" height="16")
                                    use(xlink:href="img/sprite.svg#ua")

                            ul.lang__dropdown
                                li.lang__item
                                    a.lang__link(href="#") RU

                    li.actions__item
                        button.actions__button.actions__button--green(type="button" aria-label="Show cart")
                            svg.actions__icon(width="18" height="26")
                                use(xlink:href="img/sprite.svg#cart")
                            
                            .actions__button-count 1

    .header__bottom
        .container
            nav.menu
                ul.menu__list
                    li.menu__item
                        a.menu__link.is-active(href="#")
                            svg.menu__icon(width="42" height="35")
                                use(xlink:href="img/sprite.svg#menu-1")
                            | Суші
                    li.menu__item
                        a.menu__link(href="#")
                            svg.menu__icon(width="42" height="35")
                                use(xlink:href="img/sprite.svg#menu-2")
                            | Роли
                    li.menu__item
                        a.menu__link(href="#")
                            svg.menu__icon(width="42" height="35")
                                use(xlink:href="img/sprite.svg#menu-3")
                            | Сети
                    li.menu__item
                        a.menu__link(href="#")
                            svg.menu__icon(width="42" height="35")
                                use(xlink:href="img/sprite.svg#menu-4")
                            | Напитки
                    li.menu__item
                        a.menu__link(href="#")
                            svg.menu__icon(width="42" height="35")
                                use(xlink:href="img/sprite.svg#menu-5")
                            | Добивки
