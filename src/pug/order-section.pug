                        .order-card__count
                            .quantity.order-card__quantity
                                button.quantity__button.quantity__minus(type="button" onclick="this.parentNode.querySelector('[type=number]').stepDown();") −
                                input.quantity__input.input-numbers(type="number" name="inputQuantity" min="1" max="99" step="1" value='2')
                                button.quantity__button.quantity__plus(type="button" onclick="this.parentNode.querySelector('[type=number]').stepUp();") +

                        .order-card__price
                            .price
                                del.price__old 1999 ₴
                                span.price__new 1799 ₴

                        .order-card__total
                            .price
                                span.price__new 3 598 ₴

                        .order-card__remove
                            button.remove-button.order-card__remove-button(type="button" data-modal="modal-delete")
                                svg.remove-button__icon(width="23" height="23")
                                    use(xlink:href="img/sprite.svg#close-modal")
        
        .order-more
            p.order-more__text До набору входить комплект для 4-х людей. Замовити ще?
            .order-more__count
                .order-more__price + 0 грн к вартості
                .quantity.order-more__quantity
                    button.quantity__button.quantity__minus(type="button" onclick="this.parentNode.querySelector('[type=number]').stepDown();") −
                    input.quantity__input.input-numbers(type="number" name="inputQuantity" min="1" max="99" step="1" value='0')
                    button.quantity__button.quantity__plus(type="button" onclick="this.parentNode.querySelector('[type=number]').stepUp();") +

        .order-total
            h2.order-total__title Разом
            .order-total__price 3 600 ₴

        button.button.button--green.order-section__button(type="button") Оформити замовлення
            svg.button__icon(width="8" height="8")
                use(xlink:href="img/sprite.svg#arrow-right")
